# Database
DATABASE_URL=mysql+pymysql://root:password@localhost/online_exam_proctoring
SQLALCHEMY_ECHO=False

# Flask
FLASK_APP=run.py
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_PORT=5000

# JWT
JWT_SECRET_KEY=your-super-secret-key-change-this

# Email
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@examproctoring.com

# Upload
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=524288000

# Proctoring
VIOLATION_TRUST_SCORE_REDUCTION=10
CRITICAL_TRUST_SCORE_THRESHOLD=50
ENABLE_BLUR_BACKGROUND=True
ENABLE_SOUND_DETECTION=True
ENABLE_FACE_DETECTION=True
ENABLE_PHONE_DETECTION=True
ENABLE_TAB_MONITORING=True
ENABLE_EYE_GAZE_TRACKING=True

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO